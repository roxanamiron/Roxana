@model List<ToDoListBox.UI.Models.Task.TaskViewModel>
@{
    ViewBag.Title = "ViewAll";
}

<h2>All tasks:</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>Description</label>
                </th>
                <th>
                    <label>Priority</label>
                </th>
                <th>
                    <label>Created</label>
                </th>
                <th>
                    <label>UpDated</label>
                </th>
                <th>
                    <label>DueDate</label>
                </th>
                <th>
                    <label>Completed</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(t => task.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Updated)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(t => task.Completed)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Task", new { @id = task.Id }, new { @id = "btn_EditTask_" + task.Id})
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    @Html.ActionLink("Create", "Create", "Task", new { @id = "btn_CreateTask"})
                </td>
            </tr>
        </tfoot>
    </table>
</div>

